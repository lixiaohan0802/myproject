.main{
  width: 100%;
  height: 100%;
  background-color: #DDDDDD;
  padding-top: 5px;
}
.weather1{
  display: block;
  margin: 10px auto;
  width: 90%;
  height: 250px;
  border-radius: 10px;
  margin-top: 10px;
}
.weather1 .top{
  width: 80%;
  height: 130px;
}
.weather1 .city{
  padding:5px 10px;
  align-content: left;
  font-size: 20px;
  color: black;
}
.weather1 .wether{
  padding-left: 10px;
  font-size: 40px;
  color: black;
}
.weather1 .tips{
  padding-left: 5px;
  color:#111111 ;
}
.find-box{
  height: 30px;
  padding: 5px 20px;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #DDDDDD;
}
.find-box input{
  width: 80%;
  height: 30px;
  border:1px solid gray;
  background-color: white;
  text-align: center;
}
.find-box .find{
  float: left;
  width: 20%;
  height: 30px;
  border: 1px solid  gray;
  background-color: white;
  text-align: center;
  line-height: 30px;
  font-size: 14px;
  color: #333;
  margin-left: -1px;
}
.day{
  display: block;
  width: 100%;
  height: 60px;
  margin:5px auto;
}
.day .sun{
  float: left;
  margin-left: 15px;
  margin-right: 10px;
  border-radius: 10px;
  text-align: center;
  background-color: white;
  padding:5px 11px;
}
.day .today{
  float: left;
  margin-right: 10px;
  border-radius: 10px;
  text-align: center;
  background-color: white;
  padding:5px 11px;
}
.day .night{
  float: left;
  border-radius: 10px;
  text-align: center;
  background-color: white;
  padding:5px 11px;
}
.Tip{
  display: block;
  margin: 10px auto;
  width: 90%;
  border-radius: 10px;
  margin-top: 10px;
  background-color: white;
  text-align: center;
  line-height: 30px;
  color: #666666;
}
.time{
  width: 90%;
  margin: -5px auto;
  padding-top: 5px;
}
.time .info-list .item{
  width: 100%;
  background-color: white;
  text-align: center;
  margin: 5px auto;
}
.time .info-list .item .item-hours{
  color: #666666;
}
.info-list .item > view image{
  width: 40px;
  height: 30px;
}
.finally{
  height: 50px;
  background-color: #DDDDDD;
}